<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".presentation.quiz.QuizFragment">

    <TextView
        android:id="@+id/QuizSelectConceptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="과목 선택"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/QuizConceptLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_explanation"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/QuizGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/QuizSelectConceptTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/QuizDataStructureCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/QuizDataStructureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자료구조"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/QuizAlgorithmCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/QuizAlgorithmTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알고리즘"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/QuizOSCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/QuizOSTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운영체제"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/QuizDataBaseCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/QuizDataBaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이터베이스"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/QuizNetworkCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/QuizNetworkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네트워크"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/QuizGuideLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/QuizConceptLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/QuizSelectQuizTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="퀴즈 선택"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/QuizGuideLine"/>

    <LinearLayout
        android:id="@+id/QuizSelectQuizLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_explanation"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/QuizSelectQuizTextView">

        <RadioGroup
            android:id="@+id/quizRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/quizMultipleChoiceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="객관식"/>

            <RadioButton
                android:id="@+id/quizSubjectiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="면접 대비"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/QuizStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/QuizSelectQuizLayout"
        app:layout_constraintTop_toBottomOf="@id/QuizSelectQuizLayout"
        app:layout_constraintEnd_toEndOf="@id/QuizSelectQuizLayout"
        android:layout_marginTop="50dp"
        android:text="start"
        android:stateListAnimator="@null"
        android:backgroundTint="@color/no_jh"/>

</androidx.constraintlayout.widget.ConstraintLayout>