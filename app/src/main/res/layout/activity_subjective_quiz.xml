<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.subjective.quiz.SubjectiveQuizActivity">

    <TextView
        android:id="@+id/SubjectiveQuizTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="1번째"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/SubjectiveQuizGuideLineTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/SubjectiveQuizGuideLineTextView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SubjectiveQuizQuizTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SubjectiveQuizGuideLineTextView"
        android:text="문제"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/SubjectiveQuizQuizTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SubjectiveQuizQuizTitleTextView"
        android:text="프로세스와 쓰레드의 차이에 대해 말하시오"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@drawable/background_explanation"
        android:padding="10dp"
        android:layout_margin="30dp"/>

    <View
        android:id="@+id/SubjectiveQuizGuideLineTextView2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SubjectiveQuizQuizTextView"/>

    <View
        android:id="@+id/SubjectiveQuizBestAnswerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SubjectiveQuizGuideLineTextView2"
        app:layout_constraintBottom_toTopOf="@id/SubjectiveQuizNextButton"
        android:background="@drawable/background_explanation"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/SubjectiveQuizBestAnswerTextView"
        app:layout_constraintStart_toStartOf="@id/SubjectiveQuizBestAnswerView"
        app:layout_constraintEnd_toEndOf="@id/SubjectiveQuizBestAnswerView"
        app:layout_constraintTop_toTopOf="@id/SubjectiveQuizBestAnswerView"
        app:layout_constraintBottom_toBottomOf="@id/SubjectiveQuizBestAnswerView"
        android:layout_margin="10dp"
        tools:text=""
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/SubjectiveQuizShowBestAnswerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/SubjectiveQuizBestAnswerView"
        app:layout_constraintBottom_toBottomOf="@id/SubjectiveQuizBestAnswerView"
        android:text="모범 답안 보기"
        android:backgroundTint="@color/no_jh"/>

    <Button
        android:id="@+id/SubjectiveQuizNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/no_jh"
        android:text="다음 문제"/>


</androidx.constraintlayout.widget.ConstraintLayout>