<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.quiz.multiplechoice.result.MultipleChoiceResultActivity">

    <TextView
        android:id="@+id/ActivityMultipleChoiceResultTopTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="결과"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/ActivityMultipleChoiceResultGuideLineTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/ActivityMultipleChoiceResultGuideLineTextView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ActivityMultipleChoiceResultCorrectCountTopTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultGuideLineTextView"
        android:text="맞은 개수"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/ActivityMultipleChoiceResultCorrectCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ActivityMultipleChoiceResultCorrectCountTopTextView"
        app:layout_constraintEnd_toEndOf="@id/ActivityMultipleChoiceResultCorrectCountTopTextView"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultCorrectCountTopTextView"
        android:text="8 / 10 개"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/ActivityMultipleChoiceResultGuideLineTextView2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultCorrectCountTextView" />

    <TextView
        android:id="@+id/ActivityMultipleChoiceResultTimeTopTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultGuideLineTextView2"
        android:text="걸린 시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/ActivityMultipleChoiceResultTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ActivityMultipleChoiceResultTimeTopTextView"
        app:layout_constraintEnd_toEndOf="@id/ActivityMultipleChoiceResultTimeTopTextView"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultTimeTopTextView"
        android:text="2분 36초"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/ActivityMultipleChoiceResultGuideLineTextView3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultTimeTextView" />

    <Button
        android:id="@+id/ActivityMultipleChoiceResultShowIncorrectQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultGuideLineTextView3"
        android:backgroundTint="@color/no_jh"
        android:layout_marginTop="30dp"
        android:text="틀린문제 보기"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/ActivityMultipleChoiceResultExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActivityMultipleChoiceResultShowIncorrectQuizButton"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/no_jh"
        android:text="나가기"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>