<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.multiplechoice.result.MultipleChoiceResultActivity">

    <TextView
        android:id="@+id/MultipleChoiceResultTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="결과"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/MultipleChoiceResultGuideLineTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/MultipleChoiceResultGuideLineTextView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MultipleChoiceCorrectCountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceResultGuideLineTextView"
        android:text="맞은 개수"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MultipleChoiceResultCorrectResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/MultipleChoiceCorrectCountTextView"
        app:layout_constraintEnd_toEndOf="@id/MultipleChoiceCorrectCountTextView"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceCorrectCountTextView"
        android:text="8 / 10 개"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/MultipleChoiceResultGuideLineTextView2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceResultCorrectResultTextView" />

    <TextView
        android:id="@+id/MultipleChoiceTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceResultGuideLineTextView2"
        android:text="걸린 시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MultipleChoiceResultTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/MultipleChoiceTimeTextView"
        app:layout_constraintEnd_toEndOf="@id/MultipleChoiceTimeTextView"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceTimeTextView"
        android:text="2분 36초"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/MultipleChoiceResultGuideLineTextView3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceResultTimeTextView" />

    <Button
        android:id="@+id/MultipleChoiceResultShowIncorrectQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceResultGuideLineTextView3"
        android:backgroundTint="@color/no_jh"
        android:layout_marginTop="30dp"
        android:text="틀린 문제 보기"/>

    <Button
        android:id="@+id/MultipleChoiceResultExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MultipleChoiceResultShowIncorrectQuiz"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/no_jh"
        android:text="나가기"/>


</androidx.constraintlayout.widget.ConstraintLayout>