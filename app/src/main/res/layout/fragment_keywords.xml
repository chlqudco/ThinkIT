<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.keywords.KeywordsFragment">

    <EditText
        android:id="@+id/keyword_Fragment_searchEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:drawableStart="@drawable/icon_keyword_search"
        android:drawablePadding="6dp"
        android:elevation="8dp"
        android:hint="키워드를 검색해보세요."
        android:imeOptions="actionSearch"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingHorizontal="12dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/keyword_fragment_recyclerView"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/keyword_fragment_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyword_Fragment_searchEditText"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyword_Fragment_searchEditText" >

        <include layout="@layout/item_keyword"
            android:id="@+id/testKeyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
        <include layout="@layout/item_keyword"/>
    </LinearLayout>

    <TextView
        android:id="@+id/keywords_empty_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이터가 없습니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>